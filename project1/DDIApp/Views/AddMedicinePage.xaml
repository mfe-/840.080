<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DDIApp.Views.AddMedicinePage"
             Title="{Binding Title,Mode=TwoWay}" Padding="0, 0, 0, 20 ">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to AddMedicinePage!" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />

            <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
                <Label Text="Name: " />
                <Entry Text="{Binding Path=Drug.Name,Mode=TwoWay}" HorizontalOptions="FillAndExpand" />
            </StackLayout>
            
            <Button Text="Add Drug" Command="{Binding Path=AddMedicineCommand}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>